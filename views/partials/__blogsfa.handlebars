
 <!-- blog section -->
<section class="section" id="blog">
    <!-- container -->
    <div class="container text-center">
        <p class="section-subtitle">آخرین پست‌ها؟</p>
        <h6 class="section-title mb-6">وبلاگ</h6>

        <!-- blog-wrapper -->
        {{#each blogs}}
        <div class="blog-card">
            <div class="blog-card-header">
                <img src={{this.Imag}} class="blog-card-img" alt="{{this.Title}}">
            </div>
            <div class="blog-card-body">
                <h5 class="blog-card-title">{{this.Title}}</h5>
                <p class="blog-card-caption">
                    <a href="#">نویسنده: مدیر</a>
                    <a href="#"><i class="ti-heart text-danger"></i> 120</a>
                    <a href="#"><i class="ti-comment"></i> 45</a>
                </p>
                <p>{{this.Description}}</p>
                <a href=/blogfa/{{this.postId}} class="blog-card-link">ادامه مطلب <i class="ti-angle-double-right"></i></a>
            </div>
        </div>
        {{/each}}
        <!-- end of blog wrapper -->

    </div><!-- end of container -->
</section><!-- end of blog section -->

