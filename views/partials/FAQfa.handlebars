<section class="container text-center" style="direction: rtl; text-align: right;">
  <h6 class="section-title">سوالات متداول</h6>

<div class="accordion">
    <!-- FAQ Item 1 -->
    <div class="accordion-item">
        <button class="accordion-header" onclick="toggleAccordion(this)">
