                    <div data-mdb-input-init class="form-check form-check-inline">
                      <input name="HasWebsite" class="form-check-input" type="radio" value="No" id="websiteNo"
                        onclick="toggleWebsiteUrl(false)" required />
                      <label class="form-check-label" for="websiteNo">No</label>
                    </div>
                  </div>
                </div>
