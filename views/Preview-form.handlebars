                        <label class="form-check-label" for="maintenanceYes">Yes</label>
                      </div>
                      <div data-mdb-input-init class="form-check">
                        <input name="MaintenanceRequired" class="form-check-input" type="radio" value="No"
                          id="maintenanceNo" />
                        <label class="form-check-label" for="maintenanceNo">No</label>
