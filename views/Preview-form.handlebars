  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/8.1.0/mdb.umd.min.js"></script>

  <script>
    function showNextSection(sectionId) {
      const currentSection = document.querySelector(`#section-${sectionId - 1}`);
      const nextSection = document.querySelector(`#section-${sectionId}`);

      if (currentSection && validateSection(currentSection)) {
        currentSection.classList.add('hidden-section');
        if (nextSection) {
          nextSection.classList.remove('hidden-section');
        }
      } else {
        alert('لطفاً قبل از ادامه، تمام فیلدها را پر کنید.');
      }
    }

    function validateSection(section) {
      const inputs = section.querySelectorAll('input[required]');
      for (let input of inputs) {
        if (!input.value.trim()) {
          input.focus();
          return false;
        }
      }
      return true;
    }

  </script>


  <script>
    function toggleOtherInput() {
      const otherCheckbox = document.getElementById('otherFeatures');
      const otherInputContainer = document.getElementById('otherInputContainer');
      const otherInput = document.getElementById('otherInput');

      if (otherCheckbox.checked) {
        otherInputContainer.style.display = 'block';
        otherInput.setAttribute('required', 'required'); // Make the input field required
      } else {
        otherInputContainer.style.display = 'none';
        otherInput.removeAttribute('required'); // Remove the required attribute
        otherInput.value = ''; // Optionally clear the input field
      }
    }







    function toggleWebsiteUrl(isVisible) {
      const websiteUrlRow = document.getElementById("websiteUrlRow");
      const websiteUrlInput = document.getElementById("weburl");

      if (isVisible) {
        websiteUrlRow.style.display = "block";
        websiteUrlInput.setAttribute("required", "required"); // Make the URL field required
      } else {
        websiteUrlRow.style.display = "none";
        websiteUrlInput.removeAttribute("required"); // Remove the required attribute
        websiteUrlInput.value = ""; // Optionally clear the input field
      }
    }



  </script>


  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const datepickerInput = document.getElementById('datepickerInput');
      const launchDateInput = document.getElementById('launchDate');
      const saveDateButton = document.getElementById('saveDate');

      // Save selected date to input field
      saveDateButton.addEventListener('click', () => {
        const selectedDate = datepickerInput.value; // Get the selected date
        if (selectedDate) {
          launchDateInput.value = selectedDate; // Set the value in the input field
        } else {
          alert('لطفا یک تاریخ انتخاب کنید.');
        }
      });
    });

  </script>


  <script>
    document.querySelector('form').addEventListener('submit', async function (event) {
      event.preventDefault(); // Prevent the default form submission

      // Collect form data
      const formData = new FormData(event.target);
      const data = {};
      formData.forEach((value, key) => {
        data[key] = value;
      });

      try {
        // Send the form data to the server
        const response = await fetch('/preview-form', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });

        const result = await response.json();
        const responseMessageElement = document.getElementById('responseMessage');

        // Display success or error message in section-10
        if (response.ok) {
          responseMessageElement.textContent = result.message || 'Your form has been submitted successfully!';
          responseMessageElement.style.color = 'green';
        } else {
          responseMessageElement.textContent = result.error || 'An error occurred while submitting the form.';
          responseMessageElement.style.color = 'red';
        }

        // Show section-10
        showNextSection(10);
      } catch (error) {
        // Handle network or other errors
        const responseMessageElement = document.getElementById('responseMessage');
        responseMessageElement.textContent = 'An unexpected error occurred. Please try again later.';
        responseMessageElement.style.color = 'red';

        // Show section-10
        showNextSection(10);
      }
    });


  </script>

  <script>

    // Handle form submission
    document.getElementById('Preview-form').addEventListener('submit', function (e) {
      e.preventDefault();

      // Collect all checked values
      const selectedFeatures = [];
      const checkboxes = document.querySelectorAll('input[name="WebsiteFeatures"]:checked');
      checkboxes.forEach(function (checkbox) {
        selectedFeatures.push(checkbox.value);
      });

      // If the "Other" checkbox is checked, include the other input value
      const otherInput = document.getElementById('otherInput').value;
      if (document.getElementById('otherFeatures').checked && otherInput) {
        selectedFeatures.push(otherInput);
      }

      // Convert selected features array to a string (comma-separated)
      const featuresString = selectedFeatures.join(', ');

      console.log('Selected Features:', featuresString);
    });
  </script>


