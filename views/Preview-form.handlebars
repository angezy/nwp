                    <label class="form-check-label" for="onlineShopping">Online Shopping</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input name="WebsiteFeatures" class="form-check-input" type="checkbox" value="Blog or News Section"
                      id="blogSection" />
                    <label class="form-check-label" for="blogSection">Blog or News Section</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input name="WebsiteFeatures" class="form-check-input" type="checkbox" value="Booking System"
                      id="bookingSystem" />
                    <label class="form-check-label" for="bookingSystem">Booking System</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input name="WebsiteFeatures" class="form-check-input" type="checkbox" value="Image Gallery"
                      id="imageGallery" />
                    <label class="form-check-label" for="imageGallery">Image Gallery</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input name="WebsiteFeatures" class="form-check-input" type="checkbox" value="Custom Animations"
