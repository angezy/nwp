<script>
// Fetch form data and render it in the table
async function fetchTableData() {
    try {
        const response = await fetch('/api/data'); // Request form data from the server
        if (!response.ok) {
            throw new Error(`HTTP error! Status: ${response.status}`);
        }
        const data = await response.json(); // Parse the JSON response
        renderTable(data); // Call function to render the table
    } catch (error) {
        console.error('Error fetching table data:', error);
    }
}

// Render the table with data
function renderTable(data) {
    const tableBody = document.getElementById('formResults');
    tableBody.innerHTML = '';  // Clear any existing rows
    data.forEach(row => {
        const tr = document.createElement('tr');
        
        // The list of fields to display
        const questions = [
            'FullName', 'Email', 'PhoneNumber', 'BusinessName', 'Industry', 
            'HasWebsite', 'WebsiteURL', 'ProjectType', 'WebsiteFeatures', 
            'OtherFeatures', 'DesignStyle', 'DesignColors', 'DesignInspirations', 
            'TargetAudience', 'UserActions', 'PreferredPlatform', 'ExternalIntegrations', 
            'MaintenanceRequired', 'Budget', 'LaunchDate', 'Milestones', 
            'CurrentWebsiteChallenges', 'SpecificRequests'
        ];

        // Iterate through each field and create a table cell for it
        questions.forEach(question => {
            const td = document.createElement('td');
            td.textContent = row[question];  // Set the text content of the cell to the value from the row
            tr.appendChild(td);
        });

        // Append the new row to the table body
        tableBody.appendChild(tr);
    });
}

// Call fetchTableData when the window loads
window.onload = fetchTableData;
</script>
